{
  "name": "pdd-multi-account-seckill",
  "version": "3.3.2",
  "description": "拼多多多账号抢购助手",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:portable": "electron-builder --win --target=portable",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev:vue": "vite",
    "build:vue": "vite build",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "npm rebuild",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "clean:all": "node -e \"['dist','node_modules','package-lock.json'].forEach(p=>require('fs').rmSync(p,{recursive:true,force:true}))\""
  },
  "keywords": [
    "拼多多",
    "抢购",
    "多账号",
    "秒杀",
    "自动化"
  ],
  "author": "PDD Multi Account Assistant",
  "license": "MIT",
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "axios": "^1.6.0",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "element-plus": "^2.3.14",
    "node-schedule": "^2.1.1",
    "ntp-client": "^0.5.3",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-echarts": "^6.6.1",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "electron": "^25.0.0",
    "electron-builder": "^23.6.0",
    "electron-reload": "^2.0.0-alpha.1",
    "jest": "^29.7.0",
    "vite": "^4.4.9"
  },
  "build": {
    "appId": "com.pdd.multi.account",
    "productName": "拼多多多账号抢购助手",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.map",
      "!**/*.log"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "publisherName": "PDD Multi Account Assistant"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "拼多多多账号抢购助手"
    }
  }
}
